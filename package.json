{
  "name": "undistracted-me",
  "version": "3.0.0",
  "author": "sarojbelbase",
  "description": "A chrome/firefox extension to show distraction free new tab.",
  "repository": "https://github.com/sarojbelbase/undistracted-me",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "chrome",
    "firefox",
    "extension",
    "new-tab",
    "undistracted",
    "distraction-free"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:firefox": "web-ext build --source-dir ./dist/",
    "build:chrome": "zip -r dist.zip dist"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-grid-layout": "^1.4.4",
    "lucide-react": "^0.344.0",
    "react-beautiful-dnd": "^13.1.1",
    "zustand": "^4.5.2",
    "@hello-pangea/dnd": "^16.5.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-grid-layout": "^1.3.5",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vite-plugin-web-extension": "^4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}