{
  "name": "undistracted-me",
  "version": "3.0.0",
  "author": "sarojbelbase",
  "description": "A chrome/firefox extension to show distraction free new tab.",
  "repository": "https://github.com/sarojbelbase/undistracted-me",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "chrome",
    "firefox",
    "extension",
    "new-tab",
    "undistracted",
    "distraction-free"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:chrome": "zip -r dist.zip dist",
    "build:firefox": "web-ext build --source-dir ./dist/"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-grid-layout": "^1.5.0",
    "lucide-react": "^0.475.0",
    "react-beautiful-dnd": "^13.1.1",
    "zustand": "^5.0.3",
    "@hello-pangea/dnd": "^17.0.0",
    "web-ext": "8.4.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.304",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-grid-layout": "^1.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "tailwindcss": "^4.0.5",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-web-extension": "^4.4.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}